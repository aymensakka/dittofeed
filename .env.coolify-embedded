# Dittofeed Multi-tenant Embedded Dashboard Configuration for Coolify
# Copy this file to .env and fill in your actual values

# ===== REQUIRED: Security Secrets =====
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-change-in-production
SECRET_KEY=your-secret-key-for-sessions-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# ===== REQUIRED: Google OAuth Configuration =====
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===== REQUIRED: Public URLs =====
# Update with your actual domain or server IP
NEXTAUTH_URL=http://your-domain.com/dashboard
NEXT_PUBLIC_API_BASE=http://your-domain.com:3001

# ===== Optional: HubSpot Integration =====
# Get these from https://app.hubspot.com/ecosystem/your-account-id/marketplace/apps
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# ===== Database Configuration =====
# Default values work for local deployment
POSTGRES_USER=dittofeed
POSTGRES_PASSWORD=password
POSTGRES_DB=dittofeed
POSTGRES_PORT=5433

# ===== Redis Configuration =====
REDIS_PASSWORD=password
REDIS_PORT=6380

# ===== ClickHouse Configuration =====
CLICKHOUSE_USER=dittofeed
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_DB=dittofeed
CLICKHOUSE_PORT=8124
CLICKHOUSE_NATIVE_PORT=9001

# ===== Temporal Configuration =====
TEMPORAL_PORT=7234

# ===== Service Ports =====
API_PORT=3001
DASHBOARD_PORT=3000

# ===== Multi-tenant Configuration =====
AUTH_MODE=multi-tenant
AUTH_PROVIDER=google
NEXT_PUBLIC_ENABLE_MULTITENANCY=true
ALLOW_AUTO_WORKSPACE_CREATION=true

# ===== Environment =====
NODE_ENV=production

# ===== Worker Configuration =====
WORKER_REPLICAS=1
WORKER_CONCURRENCY=10